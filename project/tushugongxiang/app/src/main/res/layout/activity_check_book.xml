<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBook">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:id="@+id/checkBookImageView"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBookTopRelativeLayout"
            android:layout_alignParentTop="true">
            <com.example.asus.tushugongxiang.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBookReturn"
                android:singleLine="true"
                android:layout_alignParentStart="true"
                android:text="返回"/>
            <com.example.asus.tushugongxiang.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBookAdd"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"
                android:text="增加书籍"/>
        </RelativeLayout>
        <GridLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBookFunctionGridLayout"
            android:layout_below="@id/checkBookTopRelativeLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="书籍名称"
                android:layout_columnWeight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="3"
                android:id="@+id/checkBookInputBook"
                android:background="#00000000"/>
            <com.example.asus.tushugongxiang.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBookFindBook"
                android:text="查询"
                android:layout_columnWeight="1"
                android:background="#00000000"/>
        </GridLayout>

        <ListView
            android:layout_below="@id/checkBookFunctionGridLayout"
            android:id="@+id/checkBookList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

        </ListView>
    </RelativeLayout>
</FrameLayout>